{
  "compilerOptions": {
    "target": "ES2023",
    "sourceMap": false,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
